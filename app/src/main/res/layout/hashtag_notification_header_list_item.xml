<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/itemBackgroundColorStatelist"
    android:clickable="true"
    android:focusable="true"
    >

    <TextView
        android:id="@+id/notificationTag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingVertical="@dimen/padding_dp_small"
        android:paddingStart="@dimen/padding_dp_huge"
        android:paddingEnd="@dimen/padding_dp_small"
        android:textSize="?attr/textSizeHuge"
        app:layout_constraintEnd_toStartOf="@+id/notificationCount"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="#otwartywykopmobilny"
        />

    <TextView
        android:id="@+id/notificationCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:paddingTop="@dimen/padding_dp_small"
        android:paddingBottom="@dimen/padding_dp_small"
        android:textColor="#00a645"
        android:textSize="?attr/textSizeHuge"
        app:layout_constraintEnd_toStartOf="@+id/collapseButtonImageView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="213"
        />

    <ImageView
        android:id="@+id/collapseButtonImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_dp_small"
        android:paddingRight="@dimen/margin_dp_small"
        android:paddingBottom="@dimen/padding_dp_tiny"
        android:src="?attr/collapseDrawable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
